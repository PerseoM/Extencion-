{
  "manifest_version": 3,
  "name": "Plantillas de Texto",
  "version": "1.0",
  "description": "Extensi√≥n para pegar plantillas de texto.",
  "permissions": ["contextMenus", "storage", "clipboardWrite", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}



